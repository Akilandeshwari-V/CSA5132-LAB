#include <stdio.h>
#include <ctype.h>

int main() {
    char msg[100];
    int a, b;

    printf("Enter message: ");
    fgets(msg, sizeof(msg), stdin);
    printf("Enter a and b: ");
    scanf("%d %d", &a, &b);

    for (int i = 0; msg[i] != '\0'; i++) {
        if (isalpha(msg[i])) {
            char base = isupper(msg[i]) ? 'A' : 'a';
            int p = msg[i] - base;
            int cipher_val = (a * p + b) % 26;
            if (cipher_val < 0) cipher_val += 26; 
            msg[i] = cipher_val + base;
        }
    }

    printf("Encrypted: %s", msg);
    return 0;
}
