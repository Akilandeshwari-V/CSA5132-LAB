#include <stdio.h>
#include <ctype.h>

int main() {
    char msg[100];
    int k;

    printf("Enter message: ");
    fgets(msg, sizeof(msg), stdin);
    printf("Enter shift (1-25): ");
    scanf("%d", &k);

    for (int i = 0; msg[i] != '\0'; i++) {
        if (isalpha(msg[i])) {
            char base = isupper(msg[i]) ? 'A' : 'a';
            msg[i] = (msg[i] - base + k) % 26 + base;
        }
    }

    printf("Encrypted: %s", msg);
    return 0;
}
