#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char msg[100], key[100];
    
    printf("Enter message: ");
    fgets(msg, sizeof(msg), stdin);
    printf("Enter key: ");
    scanf("%s", key);

    int msgLen = strlen(msg), keyLen = strlen(key);

    for (int i = 0, j = 0; i < msgLen; i++) {
        if (isalpha(msg[i])) {
            char base = isupper(msg[i]) ? 'A' : 'a';
            char keyBase = isupper(key[j % keyLen]) ? 'A' : 'a';
           
            int shift = toupper(key[j % keyLen]) - 'A';
            
            msg[i] = (msg[i] - base + shift) % 26 + base;
            j++; 
        }
    }

    printf("Encrypted: %s", msg);
    return 0;
}
